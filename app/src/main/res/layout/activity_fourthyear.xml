<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Academics">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="REC PEDIA"
                android:textColor="#FCC30D"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="OFFICIAL MEDIA HOUSE  &amp; EVENT ORGANIZING BODY"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Rewa Engineering College"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="SELECT YOUR BRANCH"
                android:textColor="#FCC30D"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hey, amigos!!   \n\n\n Requirement of study materials &amp; notes may continue to bother you for rest four years of engineering. And of utmost importance, when you're at your last year of engineering. As learning materials, plays a key role in helping students to grasp fundamental concepts in an interactive and engaging manner.\n\n  To make your happy learning an easy one, we have exclusively designed this section for you. In this section, soon you will be able to access through an entire syllabus along with the study materials provided.\n\n    We are diligently working on this. Soon we will be updating content in this section and will be accessible to all of you.\n\n\n   Happy learning! ðŸ™‚"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/csforthyear"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/cselogo" />

                <ImageView
                    android:id="@+id/meforthyear"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:src="@drawable/mechnicallogo" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cefourthyear"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/civillogo" />

                <ImageView
                    android:id="@+id/ecforthyear"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ecelogo" />







            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eeforthyear"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:src="@drawable/electricallogo" />









            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>