<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".pediatalks">
    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:src="@drawable/giflogo" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="REC PEDIA"
                android:textColor="#FFC107"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Official Media House &amp; Event Organizing Body"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Rewa Engineering College"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="PEDIA TALKS"
                android:textColor="#FFC107"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleX="1.6"
                app:srcCompat="@drawable/pediatalks" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Let's Tune The Talk"
                android:textColor="#E91E63"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="5dp"
                android:text="What if we could teach you the key to making your ideas tangible? Or prove the substantiality of those thoughts fleeting at the back of your mind? What if we tell you that you do not need a time machine to build bridges to the future and just your ideas would suffice just enough?\n\nBelieve us, even listening to small talk from the right person can make a huge change in your lives.\n\nWe intend to acknowledge the power of small changes that are often ignored. Be it a gentle nudge or the flap of a pair of wings; small talks often unveil themselves to be the cause for baffling outcomes.
With 'Pedia Talks' REC Pedia intends to highlight those small things that have turned a common person into a successful one. From a butterflyâ€™s wings to hurricanes or from a tiny idea to a utopia, with Pedia Talks, let us hold our hopes high on the power of Talk.\n\nSo...Let's tune the Talk"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/font5"
                android:text="KNOW MORE"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:layout_marginBottom="10dp"
                app:backgroundTint="#22292F"
                app:icon="@drawable/ic_menu_send"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>