<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.gallery.GalleryFragment">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="123dp"
                android:layout_height="110dp"
                android:layout_marginEnd="250dp"
                android:layout_marginRight="250dp"
                android:elevation="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/swipe"
                app:lottie_url="REPLACE_JSON_URL">

            </com.airbnb.lottie.LottieAnimationView>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="REC PEDIA"
                android:textColor="#FCC30D"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="OFFICIAL MEDIA HOUSE  &amp; EVENT ORGANIZING BODY"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Rewa Engineering College"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottiegallery"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:elevation="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/gallery"
                app:lottie_url="REPLACE_JSON_URL"></com.airbnb.lottie.LottieAnimationView>


            <ImageView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/one" />
            <ImageView
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/three" />
            <ImageView
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/four" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/five" />
            <ImageView
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                 android:src="@drawable/six" />
   <ImageView
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/seven" />
                     <ImageView
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/eight" />
            <ImageView
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/nine" />
            <ImageView
                android:id="@+id/ten"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/ten" />
            <ImageView
                android:id="@+id/eleven"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/eleven" />
            <ImageView
                android:id="@+id/twelve"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/twelve" />
            <ImageView
                android:id="@+id/thirteen"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.5"
                android:src="@drawable/thirteen" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottiess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:elevation="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/line"
                app:lottie_url="REPLACE_JSON_URL">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/font6"
                android:text="info@recpedia.org"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/font6"
                android:text="+91 9424002624"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font6"
                android:gravity="center"
                android:padding="5dp"
                android:text="REC Pedia's Office, 1st Floor,Rewa Enginnering College,Rewa,Madhya Pradesh,India - 486001"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/instabuttom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="instabuttom"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/instagram" />
                <ImageView
                    android:id="@+id/linkibuttom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="linkibuttom"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/linkedin" />

                <ImageView
                    android:id="@+id/ytbuttom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="ytbuttom"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/youtube" />

                <ImageView
                    android:id="@+id/fbbuttom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:onClick="fbbuttom"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/twittorbuttom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:onClick="twitterbuttom"
                    android:src="@drawable/twitter" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottiessdivider"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:elevation="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/divider"
                app:lottie_url="REPLACE_JSON_URL">

            </com.airbnb.lottie.LottieAnimationView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>