<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".joinourteam">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="REC PEDIA"
            android:textColor="#FCC30D"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="OFFICIAL MEDIA HOUSE  &amp; EVENT ORGANIZING BODY"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Rewa Engineering College"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text=" JOIN OUR TEAM"
            android:textColor="#FCC30D"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_background"
            android:scaleX="1.6"
            app:srcCompat="@drawable/joinus" />

        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Be a part of the most Esteemed And Celebrated  Organization of REC"
            android:textColor="#E91E63"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView115"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="15dp"
            android:text=" \nSend Your CV/Resume to hr@recpedia.org."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView117"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="For Resume assistance,"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/linktojoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:onClick="linktojoin"
            android:text="Kindly refer to : https://novoresume.com/career-blog/how-to-write-a-resume-guide"
            android:textColor="#FF5722"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/linktojoinbgf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="if you have queries or for any kind of help, Feel free to contact us at 9424002624"
            android:textColor="@color/white" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottiesss"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:elevation="5dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/line"
            app:lottie_url="REPLACE_JSON_URL">

        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text="info@recpedia.org"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text="+91 9424002624"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="REC Pedia's Office , 1st Floor ,Rewa Enginnering College ,Rewa,Madhya Pradesh ,India - 486002"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instabuttom"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="instabuttom"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/instagram" />
            <ImageView
                android:id="@+id/linkibuttom"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="linkibuttom"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/linkedin" />

            <ImageView
                android:id="@+id/ytbuttom"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:onClick="ytbuttom"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/youtube" />

            <ImageView
                android:id="@+id/fbbuttom"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:onClick="fbbuttom"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/twittorbuttom"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:onClick="twitterbuttom"
                android:src="@drawable/twitter" />
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottiessdivider"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:elevation="5dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/divider"
            app:lottie_url="REPLACE_JSON_URL">

        </com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>